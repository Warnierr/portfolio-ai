datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Lead {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  status    String   @default("NEW")
  createdAt DateTime @default(now())
}

model ChatLog {
  id          String   @id @default(cuid())
  userMessage String
  aiResponse  String?
  tokens      Int?
  feedback    Int?
  theme       String?
  sentiment   String?
  createdAt   DateTime @default(now())
}

model News {
  id          String    @id @default(cuid())
  title       String
  content     String
  summary     String?
  tag         String
  date        String
  category    String
  status      String    @default("PENDING")
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
}

model Analytics {
  id        String   @id @default(cuid())
  page      String
  visitorId String?
  userAgent String?
  referrer  String?
  createdAt DateTime @default(now())
}

model Waitlist {
  id        String   @id @default(cuid())
  email     String   @unique
  product   String // budget-ai, ai-act-auditor, etc.
  source    String? // homepage, services, etc.
  notified  Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([product])
  @@index([notified])
}

model Article {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  excerpt     String
  content     String    // Markdown ou HTML enrichi
  coverImage  String?   // URL de l'image de couverture
  
  // Taxonomie
  category    String    // data-engineering, dataops, llm-ia, devops-plateforme, conformite-ai-act-rgpd, retours-experience
  tags        String    // JSON array : ["spark", "jenkins", "observabilite"]
  
  // Metadata
  author      String    @default("Raouf Warnier")
  authorType  String    @default("human") // human, ai, ai-assisted
  readingTime Int       // en minutes
  status      String    @default("draft") // draft, published, archived
  featured    Boolean   @default(false)
  
  // SEO
  metaTitle       String?
  metaDescription String?
  canonical       String?
  
  // Timestamps
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([category])
  @@index([status])
  @@index([publishedAt])
  @@index([featured])
}
